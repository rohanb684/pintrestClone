  <!-- ---Web nav-- -->

  <!-- ----Mob Nav--- -->
  <nav class="mob-nav">
      <div class="logo">
          <i class="fab fa-pinterest"></i>
      </div>
     
      <div class="search-bar">
          <input type="text" name="" id="" placeholder="Search">
      </div>

      <div class="profile-pic">
        <a href="/profile">
            <img src="https://images.rawpixel.com/image_800/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIzLTA4L3Jhd3BpeGVsX29mZmljZV8yX3Bob3RvX29mX2FfbGlvbl9pc29sYXRlZF9vbl9jb2xvcl9iYWNrZ3JvdW5kXzJhNzgwMjM1LWRlYTgtNDMyOS04OWVjLTY3ZWMwNjcxZDhiMV8xLmpwZw.jpg" alt="">
          </a>
      </div>  

      <div id="menu" onclick="toggleMenu()">
          <i class="fa-solid fa-angle-down"></i>  
      </div>

      <div id="menu-items" >
          <a href="">Home</a>
          <a href="">Create</a>
          <a href="/user/logout">Logout</a>
      </div>
  </nav>
  <!-- ----Mob Nav--- -->
  <div class="create-container">
    <hr class="upperHr">
    <div class="create-header">
        <h1>Create Pin</h1>
    </div>
    <hr>
    <div class="create-content">
        <form action="/upload" method="post"  enctype="multipart/form-data">
            <div class="form-left">
                <div id="pre-upload-content">
                    <i class="fa-solid fa-arrow-up-from-bracket"></i>
                    <p>Choose a file or drag and drop it here</p>
                    <p id="bottom-content">We recommend using high-quality .jpg files less than 20MB</p>
                </div>
              
                <input type="file"  accept="image/bmp,image/jpeg,image/png,image/tiff,image/webp" name="file" required id="file-input" onchange="previewImage()">
                <img src="" alt="Image Preview" id="preview-img" style="display: none; width: 100%; height: 100%; object-fit: cover; position: absolute; top: 0; left: 0;">
            </div>
            <div class="form-right">
                <label for="title">Image Title</label>
                <input type="text" name="title" placeholder="title" id="title" required>
                <label for="description">Image Description</label>
                <textarea type="text" name="description" placeholder="description" id="description" rows="5" required></textarea>
                <button type="submit">Create</button>
            </div>
        </form>

    </div>
  </div>


  </div>

  

  <script src="/javascripts/home.js"></script>
  <script src="/javascripts/createpin.js"></script>
</body>
</html>